<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="false"
    android:background="@drawable/omonom"
    android:gravity="center">


    <Button
        android:id="@+id/btn_numb"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:background="@drawable/zarowka"
        android:onClick="onButtonOpenRandomNumbers" />


    <Button
        android:id="@+id/gra_numery"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/btn_numb"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/gra" />
</RelativeLayout>