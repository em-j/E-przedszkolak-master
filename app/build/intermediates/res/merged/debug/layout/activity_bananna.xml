<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/omonom">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewBanan"
        android:src="@drawable/banan"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/banan"
        android:layout_below="@+id/buttonbanan"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/editTextBanan" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="151dp"
        android:layout_height="90dp"
        android:text="@string/dalej"
        android:background="@drawable/buttonapka"
        android:id="@+id/buttonbanan"
        android:onClick="onButtonOpenApple"
        android:layout_gravity="right"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/editTextBanan"
        android:inputType="none"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:hint="Wpisz tutaj tekst"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>