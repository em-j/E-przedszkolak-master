<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/omonom">

   <ImageView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:src="@drawable/dodawanie"
       android:id="@+id/imageView3"
       android:layout_alignParentTop="true"
       android:layout_alignParentStart="true"
       android:layout_marginTop="68dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:text="3"
        android:id="@+id/btn_plus"
        android:layout_alignTop="@+id/btn_plus1"
        android:background="@drawable/buttonapka"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:text="@string/cztery"
        android:onClick="onButtonOpenWynik"
        android:id="@+id/btn_wynik4"
        android:background="@drawable/buttonapka"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:text="7"
        android:background="@drawable/buttonapka"
        android:id="@+id/btn_plus1"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>