<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/omonom">
   <ImageView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:src="@drawable/mnozenie"
       android:id="@+id/imageView" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:text="75"
        android:id="@+id/btn_razy"
        android:background="@drawable/buttonapka"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:text="@string/trzydziescipiec"
        android:onClick="onButtonOpenWynik"
        android:id="@+id/btn_wynik"
        android:background="@drawable/buttonapka"

        android:layout_alignTop="@+id/btn_razy1"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:text="30"
        android:background="@drawable/buttonapka"
        android:id="@+id/btn_razy1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/imageView" />
</RelativeLayout>